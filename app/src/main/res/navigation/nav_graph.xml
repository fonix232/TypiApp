<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/userListFragment">

    <fragment android:id="@+id/userListFragment"
              android:name="me.fonix232.tipyapp.ui.fragment.UserListFragment"
              android:label="UserListFragment"
              tools:layout="@layout/fragment_user_list"/>
    <fragment android:id="@+id/todoListFragment"
              android:name="me.fonix232.tipyapp.ui.fragment.TodoListFragment"
              android:label="TodoListFragment"
              tools:layout="@layout/fragment_todo_list">
        <argument android:name="userId" app:argType="integer"/>
    </fragment>
    <action android:id="@+id/gotoTodos" app:destination="@id/todoListFragment"
            app:enterAnim="@anim/nav_default_enter_anim" app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim" app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/userListFragment"/>
</navigation>