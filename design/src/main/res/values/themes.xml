<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--  Toolbar  -->
    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextAppearance">@style/AppTheme.TextAppearance.Toolbar</item>
        <item name="android:elevation">0dp</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Toolbar.Surface</item>
    </style>

    <style name="AppTheme.ThemeOverlay.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:iconTint" tools:targetApi="o">?attr/colorOnPrimary</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="actionMenuTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="AppTheme.ThemeOverlay.Toolbar.Popup" parent="ThemeOverlay.AppCompat.Light" />

</resources>
